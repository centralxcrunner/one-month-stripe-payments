/*********************************** SITE WIDE **************************************************/
@font-face {
  font-family: 'dolce';
  src:url('<%= asset_path('dolce.ttf') %>');
  src:url('<%= asset_path('dolce.ttf') %>') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'gothambook';
  src:url('<%= asset_path('gothambook.ttf') %>');
  src:url('<%= asset_path('gothambook.ttf') %>') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'gothammedium';
  src:url('<%= asset_path('gothammedium.ttf') %>');
  src:url('<%= asset_path('gothammedium.ttf') %>') format('truetype');
  font-weight: normal;
  font-style: normal;
}


@font-face {
  font-family: 'didotlight';
  src:url('<%= asset_path('didotlight.otf') %>');
  src:url('<%= asset_path('didotlight.otf') %>') format('truetype');
  font-weight: normal;
  font-style: normal;
}


.outline {
	border: 1px solid rgba(0, 0, 0, 1);
	background: rgba(255, 255, 255, 0.9);
}

a:visited, a:hover, a:active {
  color: inherit;
}

.row a {
	text-decoration: none;
}

.transparent {
  background:rgba(0,0,0,0.4);
  color: #ffffff;
}

body {
	font-family: 'gothambook', sans-serif;
}


h4 {
	line-height: 1.5em;
	margin-bottom: 20px;
}





/*********************************** MAIN NAV **************************************************/

.nav li a {
	text-decoration: none;
}

.navbar-header a {
	text-decoration: none;
}

nav {
	font-family: 'dolce', sans-serif;
}

/*********************************** HOME SCREEN **************************************************/

.jumbotron {
	background: url('<%= asset_path '30franklogobg.png' %>');
	background-size: cover;
	min-height: 720px;
	text-align: center;
	padding-top: 50px;
	margin-bottom: 0px;
	padding-bottom: 60px;
}

.jumbotron .container .row .col-md-8, .jumbotron .container .row .col-md-4 {
	color: black;
	margin-top: 100px;
	padding: 1px;
	border: 3px solid white;
}

.jumbotron h1 {
	margin-top: 80px;
	padding-bottom: 10px;
	margin-bottom: 0px;
	font-size: 30px;
	font-family: 'gothammedium', sans-serif;
}

.jumbotron h2 {
	margin-bottom: 40px;
	margin-top: 5px;
	font-size: 20px;
	font-family: 'gothambook', sans-serif;
}

.jumbotron h5 {
	font-family: 'didotlight', serif;
	font-size: 1.25em;
}

.cta-button {
	margin-top: 40px;
	padding-bottom: 40px;
	color: white;
	font-family: 'dolce', sans-serif;
}

.btn-success {
	background: black;
	border: none;
}

.btn-success:hover {
	background:rgb(212,175,55);
}

.home {
	padding-top: 0px;
	padding-bottom: 0px;
	padding-left: 0%;
	margin-left: auto;
	margin-right: auto;
	background: rgba(0,0,0,0.3);
}

.home .col-md-6 {
	background:rgba(0,0,0,0.5);
  	color: #ffffff;
  	min-height: 600px;
}

.home h2 {
	padding-top: 20%;
	padding-bottom: 10px;
	margin-top: 0;
	font-family: 'didotlight', serif;
}	

.home p {
	padding-bottom: 0px;
	margin-bottom: 0px;
	margin-top: 40px;
}

#ourcoffee {
	background: url('<%= asset_path 'aboutbg.jpg' %>');
	background-size: cover;
}

.home .col-md-6 {
	padding-left: 3%;
	padding-right: 3%;
}

.btn-primary {
	color: black;
	background: white;
	border: none;
}

.btn-primary:hover {
	background: rgb(212,175,55);
	color: black;
}

#thirtypeople {
	background: url('<%= asset_path 'contactbg.jpg' %>');
	background-size: cover;
}

