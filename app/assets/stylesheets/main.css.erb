/*********************************** SITE WIDE **************************************************/

.outline {
	border: 1px solid rgba(0, 0, 0, 1);
	background: white;
}

a:visited, a:hover, a:active {
  color: inherit;
}

.row a {
	text-decoration: none;
}

.transparent {
  background:rgba(0,0,0,0.4);
  color: #ffffff;
}

body {
	font-family: 'Questrial', sans-serif;
}


h4 {
	line-height: 1.5em;
	margin-bottom: 20px;
}


/*********************************** MAIN NAV **************************************************/

.nav li a {
	text-decoration: none;
}

.navbar-header a {
	text-decoration: none;
}

